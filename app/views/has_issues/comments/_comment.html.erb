<%= content_tag :div, class: 'panel panel-default', id: "issue_#{@issue.id}_comment_#{comment.id}" do %>
  <div class="panel-heading">
    <strong><%= comment.creator.name %></strong> commented on 
    <%= comment.created_at.to_formatted_s(:long_ordinal) %>
    <%= ' Â· edited' if comment.is_modified? %>
    <span class="options pull-right">
      <%= link_to [:edit, @issue, comment], id: "edit_comment_link", remote: true do %>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
      <% end %>
      <%= link_to [@issue, comment], method: :delete, data: {confirm: "Are you sure?"}, remote: true do %>
        <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
      <% end %>
    </span>
  </div>
  <div class="panel-body">
    <%= markdown(comment.body) %>
  </div>
<% end %>